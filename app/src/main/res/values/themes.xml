<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AniTime" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/anime_red</item>
        <item name="colorPrimaryVariant">@color/anime_back_dark</item>
        <item name="colorOnPrimary">@color/anime_back</item>
        <item name="colorPrimaryDark">@color/anime_red_dark</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryDark</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/anime_back_dark</item>
        <item name="android:textColorSecondary">@color/anime_text</item>

        <!--Definindo app bar pra exclusão-->
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeStyle">@style/Widget.AppCompat.ActionMode</item>
        <item name="actionModeCloseDrawable">@drawable/ic_action_back</item>
        <item name="actionBarTheme">@style/ThemeOverlay.MaterialComponents.Dark.ActionBar</item>

    </style>
    <style name="SearchViewTheme" parent="Widget.AppCompat.SearchView">
        <!-- cor do texto digitado -->
        <item name="android:textColorPrimary">@color/anime_search_white</item>
        <!-- cor do texto de dica -->
        <item name="android:textColorHint">@color/anime_search_hint</item>
        <!-- cor da linha e ícones -->
        <item name="android:textColorSecondary">@color/anime_search_white</item>
        <item name="colorControlActivated">@color/anime_search_white</item>
    </style>
    <style name="Widget.App.ActionMode" parent="Widget.AppCompat.ActionMode">
        <item name="titleTextStyle">?attr/textAppearanceHeadline6</item>
        <item name="subtitleTextStyle">?attr/textAppearanceSubtitle1</item>
        <item name="background">@color/material_grey_900</item>
    </style>

</resources>